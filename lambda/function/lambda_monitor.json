{
    "alerting": {
        "thresholds": {
            "memory_used": {
                "warning": 512,
                "critical": 768
            },
            "execution_duration": {
                "warning": 5000,
                "critical": 8000
            },
            "error_count": {
                "warning": 1,
                "critical": 5
            },
            "cost_estimate": {
                "warning": 0.5,
                "critical": 1.0
            },
            "health_score": {
                "warning": 80,
                "critical": 60
            }
        },
        "throttle_window": 300,
        "routing": {
            "warning": [
                {
                    "type": "sns",
                    "topic_arn": "${sns_topic_arn}" 
                }
            ],
            "critical": [
                {
                    "type": "sns",
                    "topic_arn": "${sns_topic_arn}"
                }
            ]
        }
    },
    "storage": {
        "retention_days": 30,
        "lifecycle": {
            "hot_storage_days": 7,
            "warm_storage_days": 30,
            "cold_storage_days": 90
        },
        "index_rollover": {
            "max_age": "7d",
            "max_size": "50gb"
        }
    }
}
